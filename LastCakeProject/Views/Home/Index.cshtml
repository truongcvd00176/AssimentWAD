@model IEnumerable<LastCakeProject.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<style>
    .product:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .product {
     
        margin-bottom: 50px;
        padding: 15px;
    }
</style>
<div class="jumbotron">
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://www.flowerscakesonline.com/image/slider/cakes-website-slider.jpg" style="height:400px; width: 100%">
                </div>

                <div class="item">
                    <img src="http://www.cupandcakebakery.co.uk/wp-content/uploads/2015/02/Rasp-Slider.jpg" style="height:400px; width: 100%">
                </div>

                <div class="item">
                    <img src="https://www.bakersandmore.com/image/cache/catalog/Slider/1-1500x450.jpg" style="height:400px; width: 100%">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


	    

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-3 product" style="background-color: white;">
        <img src="@Html.DisplayFor(modelItem => item.productImage)" alt="Alternate Text" width="100%" />
        <div class="col-md-12">
            
            <h2 style="color: #702e16">@Html.ActionLink(item.productName, "ProductDetail", new { id = item.productId })</h2>

        </div>
        <div class="col-md-12">
            <p style="color: #702e16; float: left; col-md-6;"> @Html.DisplayNameFor(model => model.productPrice)</p>
            <p style="color: #702e16; float: right; col-md-6;">@Html.DisplayFor(modelItem => item.productPrice) VNĐ</p>
        </div>
        <div class="col-md-12">
            <p style="color: #702e16; float: left; col-md-6;"> Số người đã mua</p>
            <p style="color: #702e16; float: right; col-md-6;">241 Người</p>
        </div>
        <div class="col-md-12">
            <p style="color: #702e16; float: left; col-md-6;"> Đánh giá</p>
            <div style="color: #702e16; float: right; col-md-6;">
                <span class="glyphicon glyphicon-star" style="color: #702e16;"></span>
                <span class="glyphicon glyphicon-star" style="color: #702e16;"></span>
                <span class="glyphicon glyphicon-star" style="color: #702e16;"></span>
                <span class="glyphicon glyphicon-star" style="color: #702e16;"></span>
                <span class="glyphicon glyphicon-star-empty" style="color: #702e16;"></span>
            </div>
        </div>
    </div>


    }

</div>


